{
  "name": "atri-server",
  "version": "1.0.0",
  "private": true,
  "description": "ATRI backend for VPS (Ubuntu + Docker)",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json && node dist/scripts/copy-admin-ui-assets.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "start": "node dist/index.js",
    "cron:diary": "node dist/scripts/run-diary-cron.js",
    "import:d1": "node dist/scripts/import-d1-sqlite.js"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "dotenv": "^16.4.7",
    "fastify": "^4.29.0",
    "pg": "^8.13.1",
    "sql.js": "^1.10.3"
  },
  "devDependencies": {
    "@types/node": "^20.17.12",
    "@types/pg": "^8.16.0",
    "@types/sql.js": "^1.4.9",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
